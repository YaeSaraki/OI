{
  "version": "2.0.0",
  "tasks": [
    { //C 11
      "label": "build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}",
        "-g",
        "-Wall",
        "-std=c11"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": "$gcc"
    },
    { //C++ 11
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}",
        "-std=c++11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "C++ 11"
    }
  ]
}